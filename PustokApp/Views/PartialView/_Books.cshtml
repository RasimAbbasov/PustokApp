@model List<Book>
@foreach (var book in Model)
{
    <div class="single-slide">
        <div class="product-card">
            <div class="product-header">
                <a href="#" class="author">
                    @book.Author.Name
                </a>
                <h3>
                    <a asp-action="detail" asp-asp-controller="book" asp-asp-route-id="@book.Id">
                        @book.Name
                    </a>
                </h3>
            </div>
            <div class="product-card--body">
                <div class="card-image">
                    <img src="image/products/@book.BookImages.FirstOrDefault(x=>x.Status==true)?.ImgName" alt="">
                    <div class="hover-contents">
                        <a href="product-details.html" class="hover-image">
                            <img src="image/products/@book.BookImages.FirstOrDefault(x=>x.Status==false)?.ImgName" alt="">
                        </a>
                        <div class="hover-btns">
                            <a href="cart.html" class="single-btn">
                                <i class="fas fa-shopping-basket"></i>
                            </a>
                            <a href="wishlist.html" class="single-btn">
                                <i class="fas fa-heart"></i>
                            </a>
                            <a href="compare.html" class="single-btn">
                                <i class="fas fa-random"></i>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#quickModal"
                               class="single-btn">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="price-block">
                    @if (book.DiscountPercentage > 0)
                    {
                        <span class="price">£@(book.Price - ((book.Price * book.DiscountPercentage) / 100))</span>
                        <del class="price-old">£book.price</del>
                        <span class="price-discount">@book.DiscountPercentage.ToString("0.##")%</span>
                    }
                    else
                    {
                        <span class="price">£book.Price</span>
                    }
                </div>
            </div>
        </div>
    </div>
}